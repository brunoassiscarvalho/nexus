{
  "name": "Endpoint",
  "type": "object",
  "properties": {
    "api_id": {
      "type": "string",
      "description": "ID da API à qual pertence"
    },
    "name": {
      "type": "string",
      "description": "Nome do endpoint"
    },
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "description": "Método HTTP"
    },
    "path": {
      "type": "string",
      "description": "Caminho do endpoint"
    },
    "description": {
      "type": "string",
      "description": "Descrição do endpoint"
    },
    "request_params": {
      "type": "array",
      "description": "Parâmetros de entrada",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "response_params": {
      "type": "array",
      "description": "Parâmetros de saída",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["api_id", "name", "method", "path"]
}
